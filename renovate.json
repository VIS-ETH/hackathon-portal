{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Zurich",
  "schedule": [
    "before 3am on monday"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "all patch updates",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "all minor updates"
    },
    {
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "enabled": false
    }
  ]
}